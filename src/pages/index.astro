---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting";
const pageTitle = "首页";

const greetingMessages = ["你好", "Hi", "嗨", "欢迎"];

const thankYouMessages = [
  "感谢来访！",
  "欢迎来到我的博客！",
  "谢谢你的关注！",
  "很高兴见到你！",
  "期待你的反馈！",
  "一起学习进步吧！",
  "记录与思考，一起成长！",
];
---

<BaseLayout pageTitle={pageTitle}>
  <p>欢迎来到我的个人网站 — 在这里我会记录学习笔记、项目进展与灵感想法。</p>
  <Greeting client:load messages={greetingMessages} thankYous={thankYouMessages} />
</BaseLayout>
