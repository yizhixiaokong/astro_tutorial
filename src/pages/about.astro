---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { getPostLink } from "../utils/links";

const pageTitle = "关于";

// 使用 getCollection 获取文章列表
const allPosts: CollectionEntry<"blog">[] = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
const recentPosts = sortedPosts.slice(0, 3); // 取最近的3篇

const identity = {
  firstName: "小空",
  country: "中国",
  occupation: "后端工程师 / 前端爱好者",
  hobbies: ["阅读", "编程", "音乐", "动漫"],
};

const skillCategories = [
  {
    category: "后端",
    skills: [
      { name: "Node.js", level: "熟悉" },
      { name: "Golang", level: "熟练" },
      { name: "Python", level: "熟悉" },
    ],
  },
  {
    category: "数据库",
    skills: [
      { name: "MySQL", level: "熟悉" },
      { name: "PostgreSQL", level: "熟悉" },
      { name: "MongoDB", level: "熟悉" },
    ],
  },
  {
    category: "前端",
    skills: [
      { name: "HTML / CSS / JavaScript", level: "熟悉" },
      { name: "Astro", level: "接触" },
      { name: "React", level: "接触" },
    ],
  },
  {
    category: "DevOps / 工具",
    skills: [
      { name: "Docker", level: "熟悉" },
      { name: "GitHub Actions / CI/CD", level: "熟悉" },
      { name: "Git / Linux / 监控调试", level: "熟练" },
    ],
  },
];

// 使用更有意义的状态对象，便于演示条件渲染
const status = {
  openToCollab: true,
  learningProgress: 1.0, // 小数表示进度（0-1）
};

const skillColor = "#0066cc";
const fontWeight = "600";
const textCase = "none";
---

<BaseLayout pageTitle={pageTitle}>
  <style is:global define:vars={{ skillColor, fontWeight, textCase }}>
    h1 {
      color: var(--color-heading);
      font-size: 2.8rem;
      text-align: left;
      border-bottom: 2px solid var(--color-border-secondary);
      padding-bottom: 0.8rem;
      margin-bottom: var(--spacing-lg);
    }
    .skill-categories {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--spacing-lg);
      margin: var(--spacing-md) 0;
    }
    .skill-category {
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border-primary);
      border-radius: var(--radius-lg);
      padding: 1.2rem;
      box-shadow: var(--shadow-sm);
      transition: all var(--transition-normal);
    }
    .skill-category h4 {
      margin: 0 0 0.8rem 0;
      color: var(--skillColor);
      font-size: 1.1rem;
      font-weight: 700;
      border-bottom: 2px solid var(--skillColor);
      padding-bottom: var(--spacing-sm);
    }
    .skill-item {
      margin: 0.6rem 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.4rem 0;
    }
    .skill-item-name {
      font-weight: 500;
      color: var(--color-text-primary);
    }
    .skill-level {
      display: inline-block;
      background: var(--color-bg-tertiary);
      color: var(--color-text-tertiary);
      padding: 0.2rem 0.6rem;
      border-radius: var(--radius-sm);
      font-size: 0.85rem;
      font-weight: 500;
    }
  </style>
  <h2>关于我与本项目</h2>

  <p>
    我是 {identity.firstName}，来自 {identity.country}，职业：{
      identity.occupation
    }。本站用于记录我的学习笔记、项目实践与个人想法。
  </p>

  <h3>技能</h3>
  <div class="skill-categories">
    {
      skillCategories.map((cat) => (
        <div class="skill-category">
          <h4>{cat.category}</h4>
          {cat.skills.map((skill) => (
            <div class="skill-item">
              <span class="skill-item-name">{skill.name}</span>
              <span class="skill-level">{skill.level}</span>
            </div>
          ))}
        </div>
      ))
    }
  </div>

  <h3>兴趣</h3>
  <p>我的爱好包括：{identity.hobbies.join("、")}。</p>

  {
    status.openToCollab && (
      <p>我愿意合作开发小型项目，欢迎通过 GitHub 与我联系讨论合作想法。</p>
    )
  }

  <p>当前学习进度：{Math.round(status.learningProgress * 100)}%</p>

  {
    recentPosts.length ? (
      <div>
        <h3>最新文章</h3>
        <ul>
          {recentPosts.map((p) => (
            <BlogPost url={getPostLink(p.id)} title={p.data.title} />
          ))}
        </ul>
      </div>
    ) : (
      <p>尚无文章，敬请期待。</p>
    )
  }

  <p>站点会随着我的学习与项目进展持续更新，欢迎通过 GitHub 与我交流。</p>
</BaseLayout>
