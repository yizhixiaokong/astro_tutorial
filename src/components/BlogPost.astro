---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;
---

<li>
  <a href={url}>{title}</a>
</li>

<style>
  li {
    margin: var(--spacing-sm) 0;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  a:hover {
    color: var(--color-primary-hover);
    text-decoration: underline;
  }
</style>
