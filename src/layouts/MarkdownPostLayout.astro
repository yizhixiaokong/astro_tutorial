---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  {
    frontmatter.image && (
      <figure style="margin: 1.5rem 0;">
        <img
          src={frontmatter.image.url}
          alt={frontmatter.image.alt}
          style="max-width: 100%; border-radius: 8px;"
        />
        {frontmatter.image.alt && (
          <figcaption style="text-align: center; color: #666; margin-top: 0.5rem;">
            {frontmatter.image.alt}
          </figcaption>
        )}
      </figure>
    )
  }
  <p><strong>发布时间：</strong>{frontmatter.pubDate.toString().slice(0,10)}</p>
  <p><strong>作者：</strong>{frontmatter.author}</p>
  {
    frontmatter.description && (
      <p>
        <strong>描述：</strong>
        {frontmatter.description}
      </p>
    )
  }
  {
    frontmatter.tags && (
      <div class="tags-container">
        <strong>标签：</strong>
        {frontmatter.tags.map((tag: string) => (
          <a href={`/tags/${tag}/`} class="tag-link">
            {tag}
          </a>
        ))}
      </div>
    )
  }
  <hr style="margin: 1.5rem 0;" />
  <slot />
</BaseLayout>

<style>
  .tags-container {
    margin: 1rem 0;
  }

  .tag-link {
    display: inline-block;
    margin-right: 0.5rem;
    padding: 0.25rem 0.5rem;
    background-color: #f0f0f0;
    border-radius: 4px;
    font-size: 0.9rem;
    text-decoration: none;
    color: #0066cc;
    transition: background-color 0.2s ease;
  }

  .tag-link:hover {
    background-color: #e0e0e0;
  }

  :global(html.dark) .tag-link {
    background-color: #27272a;
    color: #7dd3fc;
  }

  :global(html.dark) .tag-link:hover {
    background-color: #3f3f46;
  }

  :global(html.dark) figcaption {
    color: #a1a1aa !important;
  }
</style>
